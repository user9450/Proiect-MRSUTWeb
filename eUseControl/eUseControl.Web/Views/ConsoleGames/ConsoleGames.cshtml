
@{
    ViewBag.Title = "ConsoleGames";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model dynamic

<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            if (product.ProductType == 2)
            {
                <div class="col-md-3">
                    <div class="card">
                        <a href="@Url.Action("ProductDetails", "ProductDetails", new { productId = product.ProductId })">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text"><strong>@product.Price.ToString("C")</strong></p>
                            <a href="@Url.Action("AddToCart", "Order", new { productId = product.ProductId })" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>