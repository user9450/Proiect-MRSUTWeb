@model List<eUseControl.Domain.Entities.Orders.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Admin Orders Page</h2>

<table class="table">
    <tr>
        <th>OrderId</th>
        <th>Email</th>
        <th>Order Date</th>
        <th>Order Details</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.UserId</td>
            <td>@order.OrderDate</td>
            <td>
                <table class="table">
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                    </tr>
                    @foreach (var detail in order.OrderDetails)
                    {
                        <tr>
                            <td>@detail.Product.Name</td>
                            <td>@detail.Quantity</td>
                            <td>@detail.UnitPrice</td>
                        </tr>
                    }
                </table>
            </td>
        </tr>
    }
</table>

@Html.AntiForgeryToken()
