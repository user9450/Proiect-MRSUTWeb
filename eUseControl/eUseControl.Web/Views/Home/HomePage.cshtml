@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model dynamic

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="slider-with-banner">
    <div class="container">
        <div class="row">
            <!-- Begin Slider Area -->
            <div class="col-lg-8 col-md-8">
                <div class="slider-area pt-sm-30 pt-xs-30">
                    <div class="slider-active owl-carousel">
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-01 bg-1">
                            <div class="slider-progress"></div>
                            <div class="slider-content">
                                <h5 class="slidercolor">Sale Offer <span>-20% Off</span> This Week</h5>
                                <h2 class="slidercolor">PC Games</h2>
                                <h3 class="slidercolor">Starting at <span>15$</span></h3>
                                <div class="default-btn slide-btn">
                                    <a class="links" href="shop-left-sidebar.html">Deschide</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
<!-- Begin Li Banner Area -->
<div class="col-lg-4 col-md-4 text-center pt-sm-30 pt-xs-30">
    <div class="li-banner">
        <a href="#">
            <img src="~/Content/images/banner/1_1.jpg" alt="">
        </a>
    </div>
    <div class="li-banner mt-15 mt-md-30 mt-xs-25 mb-xs-5">
        <a href="#">
            <img src="~/Content/images/banner/1_2.jpg" alt="">
        </a>
    </div>
</div>
<!-- Li Banner Area End Here -->
                    </div>
                </div>
            </div>
<!-- Slider With Banner Area End Here -->
<!-- Begin Static Top Area -->
<div class="static-top-wrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="static-top-content mt-sm-30">
                    Gift Special: Gift every single day on Weekends - New Coupon code "
                    <span>LimupaSaleoff</span>
                </div>
            </div>
        </div>
    </div>
    <div><h2>Our Products</h2></div>
</div>




<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Description</p>
                    <p class="card-text"><strong>@product.Price.ToString("C")</strong></p>
                    <a href="@Url.Action("AddToCart", "Order", new { productId = product.ProductId })" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
    }
    }
</div>