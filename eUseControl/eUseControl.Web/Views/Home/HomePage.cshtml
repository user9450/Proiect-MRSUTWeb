@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model dynamic

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div class="slider-with-banner">
    <div class="container">
        <div class="row">
            <!-- Begin Slider Area -->
            <div class="col-lg-8 col-md-8">
                <div class="slider-area pt-sm-30 pt-xs-30">
                    <div class="slider-active owl-carousel">
                        <!-- Begin Single Slide Area -->
                        <div class="single-slide align-center-left animation-style-01 bg-1">
                            <div class="slider-progress"></div>
                            <div class="slider-content">
                                <h5 class="slidercolor">The legendary <span>DOOM Eternal</span></h5>
                                <h2 class="slidercolor">PC Games</h2>
                                <h3 class="slidercolor">Starting at <span>9.99$</span></h3>
                                <div class="default-btn slide-btn">
                                    <a class="links" href="@Url.Action("PCGames", "PCGames")">Shop</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Begin Li Banner Area -->
            <div class="col-lg-4 col-md-4 text-center pt-sm-30 pt-xs-30">
                <div class="li-banner">
                    <a href="@Url.Action("PCGames", "PCGames")">
                        <img src="~/Content/images/banner/1_1.jpg" alt="">
                    </a>
                </div>
                <div class="li-banner mt-15 mt-md-30 mt-xs-25 mb-xs-5">
                    <a href="@Url.Action("PCGames", "PCGames")">
                        <img src="~/Content/images/banner/1_2.jpg" alt="">
                    </a>
                </div>
            </div>
            <!-- Li Banner Area End Here -->
        </div>
    </div>
</div>
<!-- Slider With Banner Area End Here1 -->
<!-- Begin Static Top Area -->
<div class="static-top-wrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="static-top-content mt-sm-30">
                    <span></span>
                </div>
            </div>
        </div>
    </div>

</div>




<div class="container">
    <h3 align ="center" padding-top="15px">Top Sellers</h3>
    <div class="row">
        @foreach (var product in Model)
        {
            if (product.ProductType == 4)
            {
                <div class="col-md-3">
                    <div class="card">
                         <a href="@Url.Action("ProductDetails", "ProductDetails", new { productId = product.ProductId })">
                              <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                         </a>
                         <div class="card-body">
                              <h5 class="card-title">@product.Name</h5>
                              <p class="card-text">@product.Description</p>
                              <p class="card-text"><strong>@product.Price.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</strong></p>
                              <a href="@Url.Action("AddToCart", "Order", new { productId = product.ProductId })" class="btn btn-primary">Adaugă la coș</a>
                         </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

