@model List<eUseControl.Domain.Entities.Orders.Product>

@{
     ViewBag.Title = "SearchResults";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Results</h2>

@if (!Model.Any())
{
     <p>No products found matching your query.</p>
}
else
{
<div class="container">
     <div class="row">
          @foreach (var product in Model)
          {
                    <div class="col-md-3">
                         <div class="card">
                              <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                              <div class="card-body">
                                   <h5 class="card-title">@product.Name</h5>
                                   <p class="card-text">@product.Description</p>
                                   <p class="card-text"><strong>@product.Price.ToString("C")</strong></p>
                                   <a href="@Url.Action("AddToCart", "Order", new { productId = product.ProductId })" class="btn btn-primary">Add to Cart</a>
                              </div>
                         </div>
                    </div>
          }
     </div>
</div>
}

