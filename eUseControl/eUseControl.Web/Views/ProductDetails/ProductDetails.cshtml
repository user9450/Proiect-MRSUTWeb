
@{
     ViewBag.Title = "ProductDetails";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

@model dynamic

<div class="container">
     <div class="row">
          <div class="col-md-12">
               <h2 textcolor="black">@Model.Name</h2>
               <img height="700px" width="400px" src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" />
               <p textcolor="black"><strong>Price:</strong> @Model.Price.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</p>
               <p textcolor="black">@Model.Description</p>
          </div>
     </div>
</div>

